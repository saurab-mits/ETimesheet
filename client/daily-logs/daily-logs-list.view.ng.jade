.addTimesheet(layout='row')
  span(flex='')
  div(layout='column')
    h1 Add Timesheet
    form.md-whiteframe-z1( name='form', novalidate='', layout-padding='')
      table(border='1px')
        thead
          tr
            th 
              a(href='#', ng-click="sortType = 'name'; sortReverse = !sortReverse", style="color:white;text-decoration:none;") Project
                i(class='fa fa-sort',style="float:right")
              span(ng-show="sortType == 'name' && !sortReverse")
              span(ng-show="sortType == 'name' && sortReverse")
            th 
              a(href='#', ng-click="sortType = 'Timetaken'; sortReverse = !sortReverse", style="color:white;text-decoration:none;") Time Taken
                i(class='fa fa-sort',style="float:right")
              span(ng-show="sortType == 'Timetaken' && !sortReverse")
              span(ng-show="sortType == 'Timetaken' && sortReverse")
            th
              a(href='#', ng-click="sortType = 'Description'; sortReverse = !sortReverse", style="color:white;text-decoration:none;") Description
                i(class='fa fa-sort',style="float:right")
              span(ng-show="sortType == 'Description' && !sortReverse")
              span(ng-show="sortType == 'Description' && sortReverse")
            th Operations
          tr
            td
              md-select(ng-model='newDailyLog.name', placeholder='Project Title')
               md-option(ng-value='project.name', ng-repeat='project in projects',ng-click="set(project.name)") {{ project.name }}
            td
              md-input-container
                input(ng-model='newDailyLog.Timetaken',placeholder='hrs',type='number')
                label hrs
            td
              md-input-container
                textarea(ng-model='newDailyLog.Description', placeholder='')
                label Task
            td
              md-button.md-raised.md-primary(ng-click='addRow()') Add New Row
          tr(ng-repeat="time in Times")
            td
              md-select(ng-model='time.pname', placeholder='Project Title')
                md-option(ng-value='project.name', ng-repeat='project in projects',ng-click="set(project.name)") {{ project.name }}
             
            td
              md-input-container
                input(ng-model='time.Timetaken', placeholder='',type='number')
                label hrs
      
              
            td
              md-input-container
                textarea(ng-model='time.description', placeholder='')
                label Task
              
            td
              i(class='fa fa-trash-o fa-2x',style="color:rgb(0,150,136);",ng-click='Times.splice($index, 1)')

      i(class='fa fa-floppy-o fa-2x',style="color:rgb(0,150,136);float:right;",ng-click='save()')
    
  span(flex='')